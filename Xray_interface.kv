#:import utils kivy.utils
<Button>
    font_size:32
    background_normal:""
<Label>
    font_size:32
<MyGridLayout>

    canvas.before:
        Color:
            rgba: (1,0,0,1)
        Rectangle:
            size:self.size
            pos:self.pos


    name:name
    lname:Lname
    phone:phone

    GridLayout:
        rows:2
        size:root.width, root.height


        GridLayout:
            cols:2

            Label:
                text: "name: "                
            TextInput:
                id: name
                multiline:False

            Label:
                text: "Last name: "
                #text properties
                color:(0,1,1,1)
                bold:True
                outline_color:(0,0,0)
                outline_width:2


                background_color:(1,20/255,1,1)

                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size:self.size
                        pos:self.pos
            TextInput:
                id: Lname
                multiline:False

            Label:
                text:"phone: "                
            TextInput:
                id: phone
                multiline:False

        BoxLayout:
            cols:3
            orientation: "vertical"
            size: root.width, root.height
            padding:20
            spaceing:50

            Button:
                size_hint_y: None

                text: "Submit"
                font_size:32
                on_press:root.press()
                
                #background_color:(1,0,1,1)
                background_color:utils.get_color_from_hex('#cefb00')
                size_hint:(0.5,0.5)
                pos_hint:{'center_x':0.5}

            Button:
                size_hint_y: None

                text: "Submit"
                font_size:32
                on_press:root.press()
                
                #background_color:(1,0,1,1)
                background_color:utils.get_color_from_hex('#c00000')
                size_hint:(0.5,0.5)

            Button:
                size_hint_y: None

                text: "Submit"
                font_size:32
                on_press:root.press()
                
                #background_color:(1,0,1,1)
                background_color:utils.get_color_from_hex('#eefa00')




            

        