<MyGridLayout>

    name:name
    lname:Lname
    phone:phone

    GridLayout:
        rows:2
        size:root.width, root.height


        GridLayout:
            cols:2

            Label:
                text: "name: "                
            TextInput:
                id: name
                multiline:False

            Label:
                text: "Lname: "                
            TextInput:
                id: Lname
                multiline:False

            Label:
                text:"phone: "                
            TextInput:
                id: phone
                multiline:False

        Button:
            size_hint_y: None
            height: "40dp"
            text: "Submit"
            font_size:32
            on_press:root.press()



            

        